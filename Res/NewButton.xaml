<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Name="NewButton">
    
    <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
        <Border BorderBrush="White" BorderThickness="1" CornerRadius="20"
                    TextBlock.Foreground="White">
            <Border.Background>
                <ImageBrush ImageSource="/Assets/Button.png" TileMode="FlipXY" Stretch="UniformToFill"/>

            </Border.Background>
            <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></ContentPresenter>
        </Border>
    </ControlTemplate>
</ResourceDictionary>