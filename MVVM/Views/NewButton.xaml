<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Name="NewButton">
    
    <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
        <Border BorderBrush="Green" BorderThickness="3" CornerRadius="10"
                    TextBlock.Foreground="White" 
                TextBlock.TextAlignment="Center"
                TextBlock.FontSize="14" TextBlock.FontStyle="Normal" Padding="1">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStopCollection>
                        <GradientStop Offset="0" Color="LimeGreen"></GradientStop>
                        <GradientStop Offset="1" Color="GreenYellow"></GradientStop>
                    </GradientStopCollection>
                </LinearGradientBrush>
            </Border.Background>
            <ContentPresenter RecognizesAccessKey="True"></ContentPresenter>
        </Border>
    </ControlTemplate>
    

</ResourceDictionary>