<Window x:Class="Journey.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Journey"
        xmlns:vm="clr-namespace:Journey.MVVM.ViewModels"
        xmlns:pages="clr-namespace:Journey.MVVM.Views.Pages"
        xmlns:contrls="clr-namespace:Journey.MVVM.Views.Controls"
        mc:Ignorable="d"
        Height="650" Width="1200"
        WindowState="Maximized"
        Title="Вход в учётную запись"
        >
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <ResourceDictionary Source="/Res/NewButton.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" 
                                 StartPoint="0.5,0" 
                                 SpreadMethod="Pad"
                                 Opacity="0.7">
                <GradientStop Color="#FF74EFFF"/>
                <GradientStop Color="#FF001BFF" Offset="1"/>
                <GradientStop Color="#FF00D6FF" Offset="0.709"/>
                <GradientStop Color="#FF004AFF" Offset="0.931"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="435*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="FrameMain" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden">

            <Frame.Content>
                <pages:AuthPage/>
            </Frame.Content>
        </Frame>


        <contrls:Menu Grid.Column="0" 
                      Visibility="{Binding MenuVis}"/>


    </Grid>
</Window>