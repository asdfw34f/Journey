<Window x:Class="Journey.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Journey"
        xmlns:vm="clr-namespace:Journey.MVVM.ViewModels"
        xmlns:pages="clr-namespace:Journey.MVVM.Views.Pages"
        mc:Ignorable="d"
        Height="650" Width="1200"
        WindowState="Maximized"
        Title="Вход в учётную запись"
        d:DataContext="{d:DesignInstance Type=vm:AuthViewModel}">

    <Window.Resources>
        <ResourceDictionary Source="/MVVM/Views/NewButton.xaml"/>
    </Window.Resources>

    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" 
                                 StartPoint="0.5,0" 
                                 SpreadMethod="Pad"
                                 Opacity="0.7">
                <GradientStop Color="#FF74EFFF"/>
                <GradientStop Color="#FF001BFF" Offset="1"/>
                <GradientStop Color="#FF00D6FF" Offset="0.709"/>
                <GradientStop Color="#FF004AFF" Offset="0.931"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--
            <ImageBrush ImageSource="/Assets/Travelling.png"/>
          
            -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="313*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="frame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden">

            <Frame.Content>
                <pages:AuthPage/>
            </Frame.Content>
        </Frame>

        <StackPanel Grid.Column="3" 
                    VerticalAlignment="Center" Cursor="">

            <Button x:Name="Profel" 
                    Height="75" 
                    Margin="0, 5, 5, 5" 
                    Padding="0"
                    BorderThickness="0"
                    HorizontalContentAlignment="Stretch" 
                    VerticalContentAlignment="Stretch"
                    Cursor="Hand">
                <Button.Content >
                    <Image Source="/Assets/Profile.png"/>
                </Button.Content>

            </Button>
            
            <Button x:Name="News" 
                    Height="75" 
                    Margin="0, 5, 5, 5"
                    Padding="0"
                    BorderThickness="0"
                    HorizontalContentAlignment="Stretch" 
                    VerticalContentAlignment="Stretch"
                    Cursor="Hand">

                <Button.Content >
                    <Image Source="/Assets/News.png"/>
                </Button.Content>
            </Button>

            <Button x:Name="Maps" 
                    Height="75" 
                    Margin="0, 5, 5, 5"
                    BorderThickness="0"
                    Padding="0" 
                    HorizontalContentAlignment="Stretch" 
                    VerticalContentAlignment="Stretch"
                    Cursor="Hand">

                <Button.Content >
                    <Image
                           Source="/Assets/Maps.png"/>
                </Button.Content>
            </Button>

            <Button x:Name="Tickets" 
                    Height="75" 
                    Margin="0, 5, 5, 5"
                    BorderThickness="0"
                    Background="#FF74EFFF"
                    Padding="0" 
                    HorizontalContentAlignment="Stretch" 
                    VerticalContentAlignment="Stretch"
                    Cursor="Hand">
                
                <Button.Content >
                    <Image Source="/Assets/Ticket.png"/>
                </Button.Content>
            </Button>

        </StackPanel>
    </Grid>
</Window>
