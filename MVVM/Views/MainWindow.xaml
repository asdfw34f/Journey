<Window x:Class="Journey.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Journey"
        mc:Ignorable="d"
        Title="" Height="650" Width="1200">
    <Window.Resources>
        <ResourceDictionary Source="NewButton.xaml"/>

    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Travelling.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel 
            Grid.Column="1"
            Grid.ColumnSpan="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            >
            <Image Height="100" Width="100" Source="/Assets/User.png"/>



            <TextBox x:Name="textBox" 
                     Text="TextBox" 
                     Width="185" 
                     Height="35" 
                     Margin="10" 
                     VerticalContentAlignment="Center" 
                     FontSize="14"
                     MaxLines="1" 
                     MaxLength="20"
                     BorderThickness="2"
                     BorderBrush="Black"/>

            <PasswordBox x:Name="passwordBox"
                     Width="185" 
                     Height="35" 
                     Margin="10" 
                     VerticalContentAlignment="Center" 
                     FontSize="14"
                     MaxLength="20"
                     BorderThickness="2"
                     BorderBrush="Black"/>


            <Button x:Name="Enter" 
                    Height="25"
                Template="{StaticResource ButtonTemplate}"
                Content="Войти" Width="150"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" 
                    VerticalContentAlignment="Center" 
                    FontStretch="UltraExpanded" 
                    FontWeight="Bold" 
                    FontSize="7"/>



        </StackPanel>


    </Grid>
</Window>
