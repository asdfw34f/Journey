<Window x:Class="Journey.MVVM.Views.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Journey.MVVM.Views"
        xmlns:vm="clr-namespace:Journey.MVVM.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1450"
      WindowState="Maximized"
      Loaded="Window_Loaded">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary Source="/Res/NewButton.xaml"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/Assets/MainView.png" TileMode="FlipXY"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="238"/>

        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   >


            <DockPanel>
                <Image Height="30"
                   Width="30"
                   Source="/Assets/Profile.png">
                    <Image.OpacityMask>
                        <ImageBrush ImageSource="/Assets/Profile.png"/>
                    </Image.OpacityMask>
                </Image>

                <Button 
                x:Name="ProfileBtn" 
                    Margin="5, 5, 5, 5"
                    Height="40"
                    Width="180"        
                    Template="{StaticResource ButtonTemplate}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" 
                    VerticalContentAlignment="Center" 
                    FontStretch="UltraExpanded" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    IsEnabled="True">
                    <Button.Content>
                        <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="16" 
                               FontFamily="Maiandra GD" 
                               Foreground="#FFDBE5F1" 
                               TextWrapping="WrapWithOverflow"
                               >Профиль</TextBlock>
                    </Button.Content>
                </Button>

            </DockPanel>

            <DockPanel>
                <Image Height="30"
                   Width="30" Source="/Assets/News.png" />

                       
                <Button 
                x:Name="NewsBtn" 
                    Height="40"
                    Width="180"
            Margin="5, 5, 5, 5"
                    Template="{StaticResource ButtonTemplate}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" 
                    VerticalContentAlignment="Center" 
                    FontStretch="UltraExpanded" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    IsEnabled="True">
                    <Button.Content>
                        <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="16" 
                               FontFamily="Maiandra GD" 
                               Foreground="#FFDBE5F1" 
                               TextWrapping="WrapWithOverflow"
                               >Новости</TextBlock>
                    </Button.Content>
                </Button>
            </DockPanel>

            <DockPanel>
                <Image Height="30"
                   Width="30"
                       Source="/Assets/Tickets.png">
                </Image>
                <Button 
                x:Name="BuyBtn" 
                    Margin="5, 5, 5, 5"
                    Height="40"
                    Width="180"
                    Template="{StaticResource ButtonTemplate}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" 
                    VerticalContentAlignment="Center" 
                    FontStretch="UltraExpanded" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    IsEnabled="True">
                    <Button.Content>
                        <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="16" 
                               FontFamily="Maiandra GD" 
                               Foreground="#FFDBE5F1" 
                               TextWrapping="WrapWithOverflow"
                               >Билеты</TextBlock>
                    </Button.Content>
                </Button>
            </DockPanel>

        </StackPanel>

        <StackPanel Grid.Column="2" Margin="0,125,0,124">

            <Image x:Name="Photo"
                Height="200"
                   Width="200"
                   Margin="25"
                   Source="{Binding Image}"
                   Visibility="Visible">
                <Image.OpacityMask>
                    <ImageBrush TileMode="FlipXY" ImageSource="{Binding Image}">
                    </ImageBrush>
                </Image.OpacityMask>
            </Image>

            <Label Content="{Binding User.Surname}" 
                     Width="200" 
                     Height="35" 
                     VerticalContentAlignment="Center" 
                     Margin="15, 30, 15, 5"
                     FontSize="16"
                     BorderThickness="0" 
                   FontFamily="Britannic Bold" 
                   FontWeight="Bold" 
                   Foreground="#FFC3BFBF"/>

            <Label Content="{Binding User.Name}" 
                   Margin="15, 5, 15, 15"
                     Width="200" 
                     Height="35" 
                     VerticalContentAlignment="Center" 
                     FontSize="16"
                     BorderThickness="0" 
                   FontFamily="Britannic Bold"
                   FontWeight="Bold" 
                   Foreground="#FFC3BFBF"/>


            <Label Content="О себе" 
                   Margin="15, 5, 15, 15"
                     Width="200" 
                     Height="35" 
                     VerticalContentAlignment="Center" 
                     FontSize="16"
                     BorderThickness="0" 
                   FontFamily="Britannic Bold" 
                   FontWeight="Bold" 
                   Foreground="#FFC3BFBF"/>

            <Label Content="{Binding User.Date}" 
                   Margin="15, 5, 15, 15"
                     Width="200" 
                     Height="35" 
                     VerticalContentAlignment="Center" 
                     FontSize="16"
                     BorderThickness="0" 
                   FontFamily="Britannic Bold" 
                   FontWeight="Bold"
                   Foreground="#FFC3BFBF"/>

            <Button 
                Command="{Binding ExitCommand}"
                x:Name="ExitBtn" 
                    Height="40"
                    Width="120"
            Margin="5, 5, 5, 5"
                    Template="{StaticResource ButtonTemplate}" 
                    VerticalContentAlignment="Center" 
                    FontStretch="UltraExpanded" 
                    Cursor="Hand"
                    IsEnabled="True"
                >
                <Button.Content>
                    <TextBlock Text="Выход" 
                               FontSize="16" 
                               Foreground="#FFE2E2E2" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button.Content>
            </Button>

        </StackPanel>
        <ScrollContentPresenter Grid.Column="1">
            <ScrollContentPresenter.Content>
                <StackPanel>

                </StackPanel>
            </ScrollContentPresenter.Content>
        </ScrollContentPresenter>



    </Grid>
</Window>