            <Label 
                   Style="{StaticResource TextTemplate}"
                Margin="15, 0, 10, 25"
                   Height="30"
                   Content="11.08.2004" VerticalAlignment="Center" HorizontalAlignment="Center" />

            <TextBlock 
                   Width="150"
                   Height="100"
                   Margin="15, 10, 10, 0"
                   Text="My status... hgiyg yrgdfgfddgf dggyugfu ygf dsfdsfdsd sd s sdf dssd ds sd sdffsd sd  sd fsddsfwe fds  sdfdsfds fsds ds gvufv"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" FontSize="14" Foreground="#FFAFAFAF" MaxHeight="100" MaxWidth="150" TextWrapping="WrapWithOverflow" TextTrimming="WordEllipsis" />
        </StackPanel>

    </Grid>
</Page>
