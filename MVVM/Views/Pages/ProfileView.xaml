            <RowDefinition Height="285*"/>
            <RowDefinition Height="307*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="72*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    Margin="10, 5, 25, 3"
                    VerticalAlignment="Center">
            <Label 
                   Style="{StaticResource TextTemplate}"
                   Height="30"
                   Content="Demekhin" VerticalAlignment="Center" HorizontalAlignment="Center" />

            <Label 
                   Style="{StaticResource TextTemplate}"
                Margin="15, 0, 10, 0"
                   Height="30"
