<Window x:Class="Journey.MVVM.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Journey"
        xmlns:vm="clr-namespace:Journey.MVVM.ViewModels"
        mc:Ignorable="d"
        Height="650" Width="1200"
        WindowState="Maximized"
        Title="Вход в учётную запись"
        d:DataContext="{d:DesignInstance Type=vm:AuthViewModel}">



    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" 
                                 StartPoint="0.5,0" 
                                 SpreadMethod="Pad"
                                 Opacity="0.7">
                <GradientStop Color="#FF74EFFF"/>
                <GradientStop Color="#FF001BFF" Offset="1"/>
                <GradientStop Color="#FF00D6FF" Offset="0.709"/>
                <GradientStop Color="#FF004AFF" Offset="0.931"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--
            <ImageBrush ImageSource="/Assets/Travelling.png"/>
          
            -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
